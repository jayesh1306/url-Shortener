<body style="background-color: #f3fcff;">
    <div class="container mt-5">
        <div class="col-md-10 col-sm-6 col-lg-12 m-auto">
            <form action="/getUrl" method="POST" enctype="application/x-www-form-urlencoded">
                <div class="form-group">
                    <label for="">Enter Url</label>
                    <input type="url" name="url" class="form-control z-depth-1" required>
                </div>
                <div class="form-group">
                    <input type="submit" value="Submit" class="btn btn-primary z-depth-1-half">
                </div>
            </form>
            <%- include ('./partials/message')%>
        </div>
    </div>
</body>

